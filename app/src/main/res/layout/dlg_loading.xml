<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/dlg_load_background"
    android:padding="10dip" >

    <ProgressBar
        android:id="@+id/dlg_loading_progress"
        android:layout_width="40dip"
        android:layout_height="40dip" />

    <ImageView
        android:id="@+id/dlg_loading_img"
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:scaleType="centerInside"
        android:src="@drawable/pmlbs_success"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/dlg_loading_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dip"
        android:layout_toRightOf="@id/dlg_loading_progress"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

</RelativeLayout>