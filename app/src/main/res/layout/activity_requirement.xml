<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    android:orientation="vertical">

    <include layout="@layout/activity_head" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/requirement_edt_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/feedback_input_background"
                android:gravity="top"
                android:hint="车型、年款、发动机型号、零件名等……（字数300以内）"
                android:lines="8"
                android:padding="4dp" />

            <EditText
                android:id="@+id/requirement_edt_input_phone_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/feedback_input_background"
                android:hint="请输入手机号/Email/QQ,方便联系您"
                android:inputType="textEmailAddress"
                android:paddingBottom="8dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingTop="8dp"
                android:singleLine="true"
                android:textSize="14sp" />

            <Button
                android:id="@+id/requirement_btn_commit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@color/red"
                android:padding="10dp"
                android:text="发   布"
                android:textColor="#FFFF" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>