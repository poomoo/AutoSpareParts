<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingTop="10dp">


    <LinearLayout
        android:id="@+id/item_for_fragment_one_linear_one"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:layout_weight="1"
        android:background="@drawable/type_frame_background"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/item_for_fragment_one_pic_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:contentDescription="@null"
            android:scaleType="fitXY"
            android:src="@drawable/ic_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_for_fragment_one_name_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:singleLine="true"
                android:text="name"
                android:textColor="#ff1f1f1f"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/item_for_fragment_one_explain_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="explain"
                android:textColor="#ff939393"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_for_fragment_one_linear_two"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:background="@drawable/type_frame_background"
        android:gravity="center_vertical"
        android:visibility="invisible">

        <ImageView
            android:id="@+id/item_for_fragment_one_pic_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:contentDescription="@null"
            android:scaleType="fitXY"
            android:src="@drawable/ic_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_for_fragment_one_name_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:singleLine="true"
                android:text="name"
                android:textColor="#ff1f1f1f"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/item_for_fragment_one_explain_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="explain"
                android:textColor="#ff939393"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
