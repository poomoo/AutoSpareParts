<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/register_background"
    android:orientation="vertical">

    <include layout="@layout/activity_head" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/register_choice_background"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/register_choice_one"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="#20FFFFFF"
                    android:gravity="center"
                    android:padding="6dp"
                    android:text="会员注册"
                    android:textColor="#FFFF" />

                <TextView
                    android:id="@+id/register_choice_two"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="6dp"
                    android:text="VIP注册"
                    android:textColor="#FFFF" />
            </LinearLayout>

            <!--验证码-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/register_input_background"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/register_edt_phone_number"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:layout_weight="1"
                        android:background="#0000"
                        android:hint="请输入手机号码..."
                        android:inputType="number"
                        android:padding="4dp"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/register_get_check_number"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/register_get_check_number_normal"
                        android:gravity="center"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="获取验证码"
                        android:textColor="#765c48" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="#c2ccd5" />

                <EditText
                    android:id="@+id/register_edt_check_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:background="#0000"
                    android:hint="请输入验证码..."
                    android:inputType="number"
                    android:padding="4dp"
                    android:textSize="14sp" />
            </LinearLayout>

            <!--密码-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/register_input_background"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/register_edt_password_one"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:background="#0000"
                    android:hint="请输入密码..."
                    android:inputType="textPassword"
                    android:padding="4dp"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="#c2ccd5" />

                <EditText
                    android:id="@+id/register_edt_password_two"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:background="#0000"
                    android:hint="请输入密码..."
                    android:inputType="textPassword"
                    android:padding="4dp"
                    android:textSize="14sp" />
            </LinearLayout>

            <Button
                android:id="@+id/register_btn_complete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/register_company_background"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="注册"
                android:textColor="#FFFF" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
