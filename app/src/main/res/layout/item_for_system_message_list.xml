<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="5dp">

    <TextView
        android:id="@+id/item_for_system_message_textView_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="求购微车大梁"
        android:textSize="20sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/item_for_system_message_textView_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2015-11-09 11:21"
        android:textColor="@color/gray"
        android:textSize="16sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <TextView
        android:id="@+id/item_for_system_message_textView_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="求购微车大梁，手机：15329077009"
        android:textColor="@color/gray"
        android:textSize="14sp" />

    <pm.poomoo.autospareparts.view.custom.NoScrollGridView
        android:id="@+id/item_for_system_message_gridview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:numColumns="3"
        android:stretchMode="columnWidth"
        android:verticalSpacing="2dp" />
</LinearLayout>
