<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_for_system_message_textView_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="求购微车大梁"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_for_system_message_textView_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2015-11-09 11:21"
            android:textColor="@color/gray"
            android:textSize="16sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/item_for_system_message_textView_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="求购微车大梁，手机：15329077009"
        android:textColor="@color/gray"
        android:textSize="14sp" />
</LinearLayout>
